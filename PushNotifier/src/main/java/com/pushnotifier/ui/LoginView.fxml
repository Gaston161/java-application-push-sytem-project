<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="com.example.pushnotifier.ui.LoginController"
          xmlns:fx="http://javafx.com/fxml"
          hgap="10" vgap="10"
          alignment="CENTER"
          style="-fx-padding: 20; -fx-background-color: #f9f9f9;">
    <Label text="Administrateur" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"
           style="-fx-font-size: 16; -fx-font-weight: bold;" />

    <Label text="Nom d’utilisateur :" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="txtUsername" promptText="admin" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Mot de passe :" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <PasswordField fx:id="txtPassword" promptText="••••••" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Button text="Connexion" onAction="#handleLogin"
            GridPane.rowIndex="3" GridPane.columnIndex="1"
            GridPane.halignment="RIGHT" />

    <Label fx:id="lblMessage" textFill="red" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

</GridPane>

